{
  "name": "Prometheus Stack",
  "version": "1.0.0",
  "slug": "prometheus_stack",
  "description": "Prometheus, Alertmanager and Karma in one add-on",
  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "services",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:chart-timeline",
  "ports": {
    "9090/tcp": 9090,
    "9093/tcp": 9093,
    "9115/tcp": 9115,
    "8080/tcp": null
  },
  "ports_description": {
    "9090/tcp": "Prometheus",
    "9093/tcp": "Alertmanager",
    "9115/tcp": "Blackbox Exporter"
  },
  "webui": "http://[HOST]:[PORT:9090]",
  "host_network": false,
  "hassio_api": true,
  "hassio_role": "admin",
  "options": {
    "alertmanager_receiver": "default",
    "alertmanager_to_email": "example@example.com",
    "monitor_home_assistant": true,
    "monitor_supervisor": true,
    "monitor_addons": true,
    "custom_targets": [],
    "home_assistant_ip": "192.168.1.30",
    "home_assistant_port": 8123,
    "home_assistant_long_lived_token": "",
    "smtp_host": "localhost",
    "smtp_port": 25
  },
  "schema": {
    "alertmanager_receiver": "str",
    "alertmanager_to_email": "email",
    "monitor_home_assistant": "bool",
    "monitor_supervisor": "bool",
    "monitor_addons": "bool",
    "custom_targets": ["str"],
    "home_assistant_ip": "str",
    "home_assistant_port": "int",
    "home_assistant_long_lived_token": "str",
    "smtp_host": "str",
    "smtp_port": "int"
  }
}
