# Addon Configuration Sync Tools - Environment Configuration
# Copy this file to .env and customize with your settings

# Home Assistant Connection Settings
# =================================

# Home Assistant hostname or IP address
# Default: homeassistant.local
HA_HOSTNAME=homeassistant.local

# SSH username for Home Assistant
# Default: root
HA_SSH_USER=root

# SSH port for Home Assistant
# Default: 22
HA_SSH_PORT=22

# SSH private key path (optional, uses password if not set)
# Default: ~/.ssh/id_rsa
HA_SSH_KEY=~/.ssh/id_rsa

# SSH password (only used if SSH key is not available)
# Default: (empty)
HA_SSH_PASSWORD=

# Container Settings
# ==================

# Local test container name
# Default: prometheus-stack-test
LOCAL_CONTAINER_NAME=prometheus-stack-test

# Remote addon container name
# Default: prometheus
REMOTE_CONTAINER_NAME=prometheus

# Sync Settings
# =============

# Backup directory for sync operations
# Default: ./sync-backups
SYNC_BACKUP_DIR=./sync-backups

# Extracted files directory
# Default: ./ssh-extracted-configs
EXTRACTED_DIR=./ssh-extracted-configs

# Verbose logging (true/false)
# Default: false
VERBOSE=false

# Dry run mode (true/false) - show what would be done without making changes
# Default: false
DRY_RUN=false
